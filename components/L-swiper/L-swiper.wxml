<!-- dot 颜色可以配置 -->
<view class="container">
<swiper indicator-dots='true' 
        indicator-active-color='#ff5777'
        autoplay='true'
        circular='true'
        interval='3000'
        class='swiper'>
  <block wx:for="{{images}}" wx:key="id">
    <swiper-item>
      <!-- image mode  图片填充模式   宽度 -->
      <image class="swiper-image" src="{{item.item}}" mode='widthFix'/>
    </swiper-item>
  </block>
</swiper>
</view>